<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fileListItem"
    android:layout_width="fill_parent"
    android:layout_height="65dip" >

    <View
        android:id="@+id/selectorTopLine"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:antialias="false"
        android:background="@drawable/file_list_selector"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/itemBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingBottom="1dip"
            	android:paddingTop="2dip" 
                android:gravity="left"
                android:paddingLeft="30dip"
                android:singleLine="true"
                android:typeface="sans"
                android:textColor="@color/textColor"
                android:textSize="26.0sp" />

            <TextView
                android:id="@+id/item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:paddingBottom="4.0dip"
                android:paddingLeft="31.0dip"
                android:typeface="sans"
                android:singleLine="true"
                android:text="Info"
                android:textColor="@color/textColor"
                android:textSize="18.0sp" />
    </LinearLayout>

    <View
        android:id="@+id/selectorBottomLine"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:antialias="false"
        android:background="@drawable/file_list_selector"
        android:visibility="visible" />

    <View
        android:id="@+id/selectorRightLine"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:antialias="false"
        android:background="@color/textColor" />

</RelativeLayout>