<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:scrollbarStyle="insideOverlay"
	android:scrollbars="vertical"
	android:background="#ffdddddd"
	android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
	android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
	android:layout_width="fill_parent"
	android:fadingEdge="none"
	android:focusable="false"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#ffe7e7e7"
		android:orientation="vertical">
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/tabs_back"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:gravity="center_vertical">
			<Button
				android:id="@+id/button_text"
				android:background="@drawable/tab_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/text_color"
				android:textColor="#ff000000"
				android:textSize="18dip"
				android:layout_alignParentLeft="true"
				android:enabled="false" />
			<Button
				android:id="@+id/button_back"
				android:background="@drawable/tab_button"
				android:layout_width="wrap_content"
				android:textColor="#ff000000"
				android:text="@string/back_color"
				android:layout_toRightOf="@+id/button_text"
				android:enabled="true"
				android:textSize="18dip"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:paddingTop="5dip"
			android:gravity="top"
			android:orientation="horizontal">
			<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:background="#ffaaaaaa"
				android:layout_weight="1"
				android:padding="1dip">
				<TextView
					android:layout_width="fill_parent"
					android:padding="10dip"
					android:layout_height="fill_parent"
					android:text="@string/text_sample"
					android:id="@+id/color_sample"
					android:textSize="19dip"
					android:maxLines="10"
					android:gravity="center_vertical" />
			</FrameLayout>
		</LinearLayout>
		<SeekBar
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:max="360"
			android:progressDrawable="@drawable/color_light"
			android:id="@+id/light_slider" />
		<SeekBar
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:max="360"
			android:progressDrawable="@drawable/color_sat"
			android:id="@+id/sat_slider" />
		<SeekBar
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:max="360"
			android:progressDrawable="@drawable/color_hue"
			android:layout_marginTop="0.5dip"
			android:progress="128"
			android:id="@+id/hue_slider" />
	</LinearLayout>
</ScrollView>